<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <div class="d-flex gap-2 justify-content-between align-items-center">
    <h1 class="mb-4">Lista de Autores</h1>
    <%= link_to 'Inicio', posts_path  , class: "mb-4 btn btn-primary" %>
    </div>

      <% if @authors.any? %>
        <ul class="list-group">
          <% @authors.each do |author| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to author.name, author %>
            <form action="<%= author_path(author) %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input type="submit" value="Excluir" class="btn btn-danger">
            </form>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mt-3">Nenhum autor cadastrado ainda.</p>
      <% end %>

      <%= link_to 'Cadastrar Novo Autor', new_author_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>